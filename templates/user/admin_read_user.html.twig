{% extends 'base_admin.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}

<a href="{{ path('admin_create_user') }}"> Ajouter un utilisateur </a>

<table>
      <tr>
          <th>Email</th>
          <th>Nom d'Utilisateur</th>
          <th>Mot de passe</th>
          <th>Modifier</th>
          <th>Supprimer</th>
      </tr>
      {% for user in users %}
      <tr>
        <td>{{ user.email }}</td>
        <td>{{ user.username }}</td>
         <td>{{ user.password }}</td>
        <td><a href="{{ path('admin_update_user', {id: user.id}) }}">Modifier</a></td>
        <td><a href="{{ path('admin_delete_user', {id: user.id}) }}">Supprimer</a></td>
      </tr>
      {% endfor %}
    </table>
 
 {% endblock %}